<div class="container">
  <div class="row mb-3">
    <div class="input-group col">
          <input class="form-control py-2" type="search" placeholder="search" id="search">
          <span class="input-group-append">
            <button class="btn btn-outline-secondary" type="button">
                <i class="fa fa-search"></i>
            </button>
          </span>
    </div>
  </div>
  <div class="row mb-3">
    {{#each ticket}}
    <div class="col-sm-12 col-md-6 col-lg-4 mb-3">
      <div class="card">
        <div class="card-header">
          <a href="/customer/edit/{{this.customerID}}">{{this.customer}}</a> - <a href="/ticket/edit/{{this._id}}">{{this.device.serial}}</a>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col">
              <div class="{{this.status.class}} active rounded btn-block text-center mb-2" style='cursor:default'>
                <span>{{this.status.status}}</span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <small>Make</small>
              <p>{{this.device.make}}</p>
            </div>
            <div class="col">
              <small>Model</small>
              <p>{{this.device.model}}</p>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <small>Issue</small>
              <p>{{this.issue}}</p>
            </div>
            <div class="col">
              <small>Passcode</small>
              <p>{{this.device.passcode}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script type="text/javascript" src='/javascripts/search.js'>

</script>
