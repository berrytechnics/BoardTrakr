<div class="container">
  <div class="row">
    <div class="col">
      <a href="/customer/delete/{{data._id}}" class='btn  btn-danger float-right'>Delete Customer</a>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="form-group">
        <form class="form-group" action="/customer/edit" method="post">
          <input type="hidden" name="_id" value="{{data._id}}">
          <div class="form-group">
            <label for="company">Company</label>
            <input type="text" class='form-control mb-3' name="company" id='company' value="{{data.company}}">
          </div>
          <div class="form-group">
            <label for="contact">Contact</label>
            <input type="text" class='form-control mb-3' id='contact' name="contact" value="{{data.contact}}">
          </div>
          <div class="form-group">
            <label for="phone">Phone</label>
            <input type="tel" class='form-control mb-3' id='phone' name="phone" value="{{data.phone}}">
          </div>
          <div class="form-group">
            <label for="paypal">Paypal Email</label>
            <input type="text" class='form-control mb-3' id='paypal' name="paypal" value="{{data.paypal}}">
          </div>
          <div class="form-group">
            <label for="facebook">Facebook URL</label>
            <small id="fb_help" class="float-right form-text text-muted">dont forget the http:// !</small>
            <input type="text" class='form-control mb-3' id='facebook' name="facebook" value="{{data.facebook}}">
          </div>
          <div class="form-group">
            <label for="website">Website URL</label>
            <small id="web_help" class="float-right form-text text-muted">dont forget the http:// !</small>
            <input type="text" class='form-control mb-3' id='website' name="website" value="{{data.website}}">
          </div>
            <input type="submit" class='form-control btn  btn-success float-right mb-3' name="submit" value="Submit">
        </form>
      </div>
    </div>
  </div>
</div>
