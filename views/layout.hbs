<!DOCTYPE html>
<html>
  <head>
    <title>BoardTrakr</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      var socket = io();
    </script>
  </head>
  <body>
    {{#if messages.info}}
    <div class="alert alert-info fadeout" >
      {{messages.info}}
    </div>
    {{/if}}
    {{#if messages.success}}
    <div class="alert alert-success fadeout" >
      {{messages.success}}
    </div>
    {{/if}}
    {{#if messages.warning}}
    <div class="alert alert-warning fadeout" >
      {{messages.warning}}
    </div>
    {{/if}}
    {{#if messages.danger}}
    <div class="alert alert-danger fadeout" >
      {{messages.danger}}
    </div>
    {{/if}}
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <a class="navbar-brand" href="/ticket"> <b>BoardTrakr</b> </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <!-- <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li> -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Inventory
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/inventory">List Inventory</a>
              <a class="dropdown-item" href="/inventory/reorder">Restock List</a>
              <a class="dropdown-item" href="/inventory/PO">Purchase Order</a>
            </div>
          </li>
          <li class="nav-item ">
            <a class="nav-link" href="/customer/index">Customers <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item ">
            <a class="nav-link" href="/ticket">Tickets <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item ">
            <a class="nav-link" href="#">Reports <span class="sr-only">(current)</span></a>
          </li>
      </div>
      <ul class='navbar-nav ml-auto'>
        {{#if user}}
        <li class='nav-item'> <a href="/user/logout" class='nav-link'>Logout</a> </li>
        {{else}}
        <li class='nav-item'> <a href="/user/login" class='nav-link'>Login</a> </li>
        <li class='nav-item'> <a href="/user/register" class='nav-link'>Register</a> </li>
        {{/if}}
      </ul>
    </nav>
    {{{body}}}
    <script type="text/javascript">
      setTimeout(()=>{
        $('.fadeout').slideUp()
      },5000)
    </script>
  </body>
</html>
