<div class="container">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header">
          Register User
        </div>
        <div class="card-body">
          <form class="form-group" action="/user/register" method="post">
            <label>Name:</label>
            <input type="text" name="name" class='form-control' value="">
            <label>Email:</label>
            <input type="email" name="username" class='form-control' value="">
            <label>Phone:</label>
            <input type="tel" name="phone" class='form-control' value="">
            <label>Position:</label>
            <input type="text" DISABLED name="" class='form-control' value="">
            <label>Confirm Password:</label>
            <input type="password" name="password1" class='form-control' value="">
            <label>Password:</label>
            <input type="password" name="password2" class='form-control' value="">
            <input type="submit" class='btn btn-success mt-3 float-right' name="">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
